       switch(day){
         case 'monday':
         case 'tuesday':
         case 'wednesday':
         case 'thursday':
            console.log("it's a week day");
            break;
        case 'friday':
        case 'saturday':
        case 'sunday':
            console.log("it's a weekend");
            break;
            console.log("Invalid day")
        }
